<?xml version="1.0" encoding="utf-8"?>
    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activityColor"
        android:padding="20dp"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        tools:context="com.howtekno.lss.lss.app.MainActivity">

        <TextView
            android:gravity="center"
            android:text="Teacher Lecture Notes"
            android:textColor="@color/textColor"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/hintColor"
            android:height="80dp"
            android:width="80dp"
            android:layout_column="0"
            android:layout_row="0"
            android:onClick="trigger1"
            />


    <TextView
        android:gravity="center"
        android:text="Student Submmited Lecture Notes"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/hintColor"
        android:height="80dp"
        android:width="80dp"
        android:layout_column="1"
        android:layout_row="0"
        android:onClick="trigger2"
        />

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Forum"
        android:textColor="@color/textColor"
        android:layout_margin="10dp"
        android:background="@color/hintColor"
        android:height="80dp"
        android:width="80dp"
        android:layout_column="2"
        android:layout_row="0"
        android:onClick="trigger3"
        />
    <TextView
        android:gravity="center"
        android:text="Tools"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/hintColor"
        android:height="80dp"
        android:width="80dp"
        android:layout_column="0"
        android:layout_row="1"
        android:onClick="trigger4"
        />
    <TextView
        android:gravity="center"
        android:text="Report / Feedback"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/hintColor"
        android:height="80dp"
        android:width="80dp"
        android:layout_column="1"
        android:layout_row="1"
        android:onClick="trigger5"
        />
    <TextView
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/hintColor"
        android:height="80dp"
        android:width="80dp"
        android:layout_column="2"
        android:layout_row="1"
        />


</GridLayout>
